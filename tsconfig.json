
{
  "compilerOptions": {
    "outDir": "dist",

    "baseUrl": "./src",
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "Node",

    "noImplicitAny": true,
    "skipLibCheck": true,
    "allowJs": false,

    "removeComments": true,
    "declaration": true,
    "pretty": false,

    "lib": [
      "ESNext"
    ]
  },
  "include": [
    "src/**/*"
  ]
}